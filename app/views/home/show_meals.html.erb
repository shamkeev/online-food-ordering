<p id="notice"><%= notice %></p>

<h1>Listing Meals</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Description</th>
    <th>Restaurant</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.name %></td>
        <td><%= meal.price %></td>
        <td><%= meal.description %></td>
        <td><%= meal.restaurant.name %></td>
      </tr>
  <% end %>
  </tbody>
</table>


