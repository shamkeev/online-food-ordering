<p id="notice"><%= notice %></p>

<h1>Listing Restaurants</h1>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to (image_tag "/uploads/restaurants/#{restaurant.image}", height:'80'), show_restaurant_path(restaurant)%></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.description %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

