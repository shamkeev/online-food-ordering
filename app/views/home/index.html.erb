<p id="notice"><%= notice %></p>

<div class="col-md-12">
  <% @restaurants.each do |restaurant| %>
      <div class="col-md-4 col-sm-6">
        <div class="restaurant">
          <%= link_to (image_tag "/uploads/restaurants/#{restaurant.image}"),
                      show_restaurant_path(restaurant)%>
          <%= restaurant.name %>
          <%= restaurant.description %>
        </div>
      </div>
  <% end %>
</div>


