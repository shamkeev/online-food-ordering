<p id="notice"><%= notice %></p>

<h4>
  <strong>Name:</strong>
  <%= @meal.name %>
</h4>

<div class="col-md-4">
  <%= image_tag "/uploads/meals/#{@meal.image}", height:'150'%>
  <hr/>
</div>

<div class="col-md-6">
  <p>

    <strong>Price: <%= @meal.price %></strong>
  </p>
  <div class="well">
    <strong>Description:</strong>
    <%= @meal.description %>
  </div>
</div>

<div class="col-md-2">
  <%= link_to 'Edit', edit_meal_path(@meal) %> |
  <%= link_to 'Back', meals_path %>
</div>





